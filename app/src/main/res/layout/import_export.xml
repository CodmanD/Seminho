<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:id="@+id/llImEx"
    android:background="?attr/colorPrimary"
    >

    <Button
        android:text="@string/actionExport"
        android:id="@+id/btnExportFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <Button
        android:text="@string/actionExportToServer"
        android:id="@+id/btnExportServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp"
        />
<Button
    android:id="@+id/btnImportFile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/actionImport"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    />

    <Button
        android:text="@string/actionImportFromUrl"
        android:id="@+id/btnImportUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <Button
        android:id="@+id/btnImportServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/actionImportServerData"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />


</LinearLayout>